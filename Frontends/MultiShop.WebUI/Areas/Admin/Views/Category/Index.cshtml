@model List<ResultCategoryDto>

@{
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Listesi</h4>
                <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirin.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th> </th>
                                <th> </th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.CategoryName</td>
                                    <td> <a class="btn btn-warning" href="#">Kategoriye ait ürünler</a> </td>
                                    <td> <a class="btn btn-danger" href="/Admin/Category/DeleteCategory/@item.CategoryID">Sil</a></td>
                                    <td> <a class="btn btn-success" href="/Admin/Category/UpdateCategory/@item.CategoryID">Güncelle</a></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>    
                    <a class="btn btn-success" href="/Admin/Category/CreateCategory">Kategori Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>