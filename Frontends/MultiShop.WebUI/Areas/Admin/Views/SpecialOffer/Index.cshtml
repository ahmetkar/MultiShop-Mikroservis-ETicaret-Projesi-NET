@model List<ResultSpecialOfferDto>

@{
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Listesi</h4>
           
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Özel Teklif Başlık</th>
                                <th> Özel Teklif Alt Başlık</th>
                                <th> </th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><b>@item.Title</b></td>
                                    <td>@item.Subtitle</td>
                                    <td> <a class="btn btn-danger" href="/Admin/SpecialOffer/DeleteSpecialOffer/@item.SpecialOfferId">Sil</a></td>
                                    <td> <a class="btn btn-success" href="/Admin/SpecialOffer/UpdateSpecialOffer/@item.SpecialOfferId">Güncelle</a></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>    
                    <a class="btn btn-success" href="/Admin/SpecialOffer/CreateSpecialOffer">Özel Teklif Ekle</a>
                </div>
            </div>
        </div>
    </div>
</section>