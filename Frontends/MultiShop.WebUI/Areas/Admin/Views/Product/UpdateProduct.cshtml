@model UpdateProductDto

@{
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>
                    Ürün Güncelleme<h4>

                        <div class="bs-example" data-example-id="bordered-table">
                            <form method="post">
                                <input type="hidden" asp-for="ProductId" readonly />
                                <label>Ürün Adı : </label>
                                <input type="text" asp-for="ProductName" class="form-control" placeholder="Ürün Adı">
                                <br />
                                <label>Ürün Fiyatı : </label>
                                <input type="text" asp-for="ProductPrice" class="form-control" placeholder="Ürün fiyatı">
                                <br />
                                <label>Ürün Görseli : </label>
                                <input type="text" asp-for="ProductImageUrl" class="form-control" placeholder="Ürün görsel url ">
                                <br />
                                <label>Ürün Açıklaması : </label>
                                <textarea asp-for="ProductDescription" class="form-control" placeholder="Ürün açıklaması " rows="5"></textarea>
                                <br />
                                <label>Ürün Kategorisi : </label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" });
                                <br />
                                <button class="btn btn-primary" type="submit">Ürün Güncelle</button>
                            </form>

                        </div>
            </div>
        </div>
    </div>
</section>