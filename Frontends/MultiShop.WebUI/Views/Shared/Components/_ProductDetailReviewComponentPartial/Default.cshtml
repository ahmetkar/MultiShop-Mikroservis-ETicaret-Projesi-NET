@model List<ResultCommentDto>


    @if (Model == null || Model.Count == 0)
    {

        <div class="col-md-6">
            <h4 class="mb-4">Ürün için yorum bulunmamaktadır</h4>
        </div>

    }else {
    <div class="col-md-6">
        <h4 class="mb-4">Ürün için @Model.Count yorum bulunmaktadır</h4>
         @foreach(var item in Model){
            <div class="media mb-4">
                <img src="@item.ImageUrl" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                <div class="media-body">
                    <h6>@item.NameSurname<small> - <i>@item.CreatedDate.ToShortDateString()</i></small></h6>
                    <div class="text-primary mb-2">
                       @{int i = 0;}
                            @while(i < item.Rating){
                            <i class="fas fa-star"></i>
                            i++;
                            }
                    </div>
                    <p>@item.CommentDetail</p>
                </div>
            </div>
         }  
       
    </div>
    }

@await Html.PartialAsync("~/Views/ProductList/AddComment.cshtml", new { id = ViewBag.id })