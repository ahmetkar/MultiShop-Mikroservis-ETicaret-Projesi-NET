@model CreateRegisterDto

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Kayıt Ol</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/ovioadmin/bootstrap/css/bootstrap.min.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Template style -->
    <link rel="stylesheet" href="~/ovioadmin/dist/css/style.css">
    <link rel="stylesheet" href="~/ovioadmin/pages/et-line-font/et-line-font.css">
    <link rel="stylesheet" href="~/ovioadmin/pages/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/ovioadmin/dist/weather/weather-icons.min.css">
    <link type="text/css" rel="stylesheet" href="~/ovioadmin/dist/weather/weather-icons-wind.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body class="body-bg-color">
    <div class="wrapper">
        <div class="form-body">
            <form method="post" class="col-form" novalidate>
                <div class="col-logo"><a href="/"><img width="300px" height="60px" alt="" src="~/img/logos/MULTISHOPPNG.png"></a></div>
                <header>Kayıt Ol</header>
                <fieldset>
                    <section>
                        <p>Fırsatlardan yararlanabilmek,sipariş verebilmek ve daha fazla özelliğe erişmek için kayıtlı olmanız gerekir.</p>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Ad : </label>
                            <input asp-for="Name" class="form-control" placeholder="Ad :" type="text">
                            <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Soyad : </label>
                            <input asp-for="Surname" class="form-control" placeholder="Soyad :" type="text">
                            <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Kullanıcı adı : </label>
                            <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı :" type="text">
                            <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">E-mail adresiniz : </label>
                            <input asp-for="Email" class="form-control" placeholder="E-mail" type="text">
                            <span class="fa fa-envelope form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Şifre : </label>
                            <input asp-for="Password" class="form-control" placeholder="Şifre : " type="password">
                            <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Şifre Tekrar : </label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre tekrar : " type="password">
                            <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <label class="checkbox">
                                    <input asp-for="Remember" checked="" type="checkbox">
                                    <i></i>Şartları ve politikaları kabul ediyorum.
                                </label>
                            </div>
                        </div>
                    </section>
                </fieldset>
                <footer class="text-right">
                    <button type="submit" class="btn btn-info pull-right">Kayıt Ol</button>

                    <a href="/Login/Index" class="button button-secondary">Giriş Yap</a>
                </footer>
            </form>
        </div>
    </div>
    <!-- wrapper -->
    <!-- jQuery -->
    <script src="~/ovioadmin/dist/js/jquery.min.js"></script>
    <script src="~/ovioadmin/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/ovioadmin/dist/js/ovio.js"></script>
</body>
</html>